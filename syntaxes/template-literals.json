{
  "scopeName": "inline.template-literals",
  "injectionSelector": "L:source.js -comment -string, L:source.jsx -comment -string, L:source.ts -comment -string, L:source.tsx -comment -string",
  "patterns": [
    {
      "name": "string.template.js",
      "begin": "\\w+\\s*\\(`",
      "end": "`",
      "patterns": [
        {
          "include": "#template-substitution"
        },
        {
          "include": "text.html.basic"
        }
      ]
    },
    {
      "name": "string.template.js",
      "begin": "(?:html)?(`)",
      "end": "`",
      "patterns": [
        {
          "include": "#template-substitution"
        },
        {
          "include": "text.html.basic"
        }
      ]
    },
    {
      "name": "string.template.js",
      "begin": "\\(`",
      "end": "`\\)",
      "patterns": [
        {
          "include": "#template-substitution"
        },
        {
          "include": "text.html.basic"
        }
      ]
    },
    {
      "name": "string.template.js",
      "begin": "\\[`",
      "end": "`\\]",
      "patterns": [
        {
          "include": "#template-substitution"
        },
        {
          "include": "text.html.basic"
        }
      ]
    }
  ],
  "repository": {
    "template-substitution": {
      "name": "expression.embedded.js",
      "begin": "\\${",
      "end": "}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.template-expression.begin.js"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.template-expression.end.js"
        }
      },
      "patterns": [
        {
          "include": "source.ts"
        }
      ]
    }
  }
}
